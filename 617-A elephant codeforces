#include<bits/stdc++.h>
using namespace std;
int a,b,c,d,e,f;
int main()
{
    long long int n;
    cin>>n;
    while (n!=0)
    {
        if(n>=5)
        {
            n=n-5;
            a++;

        }
        else if(n>=4)
        {
            n=n-4;
            b++;
        }
        else if(n>=3)
        {
            n=n-3;
            c++;
        }
        else if(n>=2)
        {
            n=n-2;
            d++;
        }
        else if(n>=1)
        {
            n=n-1;
            e++;
        }

    }
    int x;
    x=a+b+c+d+e;
    cout<<x;


    return 0;








}
