#include<bits/stdc++.h>
using namespace std;
int a,b,c,d,e,f;
int main()
{
    string n;
    cin>>n;
    for(int i=0; i<n.size(); i++)
    {
        if(n[i]=='4' || n[i]=='7' )
        {
            c++;

        }
        else
        {
            continue;
        }
    }


    if(c==4 || c==7)
    {
        cout<<"YES"<<endl;
    }
    else
    {
        cout<<"NO"<<endl;
    }





    return 0;
}





