#include<bits/stdc++.h>
using namespace std;
#define PI 2*acos(0.0)
int n;
double a,b,c,d,e,r;
int main()
{
    cin>>n;
    for(int i=1; i<=n; i++)
    {
        cin>>setprecision(4)>>r;
        d=r*2;
        a=d*d;
        c= PI*r*r;
        e=a-c;
        cout<<fixed;
        cout<<setprecision(2)<<"Case "<<i<<": "<<e<<endl;


    }
    return 0;

}
