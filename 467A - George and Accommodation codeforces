#include<bits/stdc++.h>
using namespace std;
int a,b,c,d,e,f;
int main()
{
    int n;
    cin>>n;
    int p[100],q[100],c[100];
    for(int i=0;i<n;i++)
    {
        cin>>p[i]>>q[i];
        c[i]=q[i]-p[i];
        if(c[i]>=2)
        {
            d++;
        }
    }
    cout<<d;



    return 0;
}





