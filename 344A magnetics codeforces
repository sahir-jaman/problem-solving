#include<bits/stdc++.h>
using namespace std;
int c,d,e,f;
int main()
{
    int n;
    cin>>n;
    int a[n];
    for(int i=0; i<n; i++)
    {
        cin>>a[i];
        f++;
    }
    if(f==1)
    {
        cout<<"1";
    }
    else
    {
        for(int i=0; i<n; i++)
        {
            if(a[i]!=a[i+1])   // remember there is last
            {
                // char "/0" which is last i+1;
                c++;
            }
        }
    cout<<c;
    }
    return 0;



}






